{
  "$schema": "https://json.schemastore.org/package.json",
  "engines": {
    "bun": ">=1.3.5"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "@changesets/cli": "^2.29.8",
    "husky": "^9.1.7",
    "turbo": "^2.7.3",
    "typescript": "5.9.3",
    "vercel": "^50.1.6"
  },
  "name": "gentleduck",
  "description": "GentleDuck monorepo for the gentleduck.org website and docs platform.",
  "author": "GentleDuck (https://www.gentleduck.org)",
  "license": "MIT",
  "homepage": "https://www.gentleduck.org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gentleeduck/duck-www.git"
  },
  "bugs": {
    "url": "https://github.com/gentleeduck/duck-www/issues"
  },
  "keywords": [
    "gentleduck",
    "duck-www",
    "website",
    "nextjs",
    "docs"
  ],
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*",
    "tooling/*"
  ],
  "overrides": {
    "vite": "npm:rolldown-vite@^7.3.0"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@ffprobe-installer/linux-x64",
    "@parcel/watcher",
    "@swc/core",
    "core-js-pure",
    "esbuild",
    "protobufjs",
    "sharp"
  ],
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo test",
    "check-types": "turbo run check-types",
    "check": "biome check .",
    "lint": "biome lint .",
    "format": "biome format --write .",
    "fix": "biome check --write .",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "ci": "bun run lint && bun run format && bun run build",
    "release": "bun run ci && changeset publish",
    "clean": "rimraf dist .cache .turbo node_modules .next .velite",
    "clean:git": "git clean -xdf .cache .turbo node_modules dist",
    "lint:ws": "bunx sherif@latest",
    "postinstall": "bun run lint:ws",
    "prepare": "husky"
  },
  "dependencies": {
    "@gentleduck/docs": "^0.0.13"
  }
}
