{
  "$schema": "https://json.schemastore.org/package.json",
  "engines": {
    "bun": ">=1.3.5"
  },
  "author": "gentleduck",
  "dependencies": {
    "@vitejs/plugin-react-swc": "^3.11.0",
    "tsdown": "0.18.3"
  },
  "description": "this is a package for `tsdown` build configs",
  "devDependencies": {
    "@gentleduck/typescript-config": "workspace:*"
  },
  "keywords": [
    "tsdown",
    "tsdown-config"
  ],
  "license": "MIT",
  "main": "dist/index.mjs",
  "name": "@gentleduck/tsdown-config",
  "homepage": "https://github.com/gentleeduck/duck-ui/tree/master/tooling/tsdown#readme",
  "bugs": {
    "url": "https://github.com/gentleeduck/duck-ui/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gentleeduck/duck-ui.git",
    "directory": "tooling/tsdown"
  },
  "packageManager": "bun@1.3.5",
  "private": true,
  "scripts": {
    "build": "tsdown index.ts --format esm --dts",
    "clean": "git clean -xdf .cache .turbo node_modules dist",
    "format": "biome format --write ./",
    "lint": "biome lint --write ./"
  },
  "type": "module",
  "types": "dist/index.d.mts",
  "version": "0.0.1"
}
